<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
	<converter>
		<converter-id>dateId</converter-id>
		<converter-class>infy.library.converter.DateNullConverter</converter-class>
	</converter>
	<managed-bean>
		<managed-bean-name>issueBookBean</managed-bean-name>
		<managed-bean-class>infy.library.bean.IssueBookBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>reportBean</managed-bean-name>
		<managed-bean-class>infy.library.bean.ReportBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>returnBookBean</managed-bean-name>
		<managed-bean-class>infy.library.bean.ReturnBookBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>
		issueBook</display-name>
		<from-view-id>
		/issueBook.jsp</from-view-id>
		<navigation-case>
			<from-outcome>
			success</from-outcome>
			<to-view-id>
			/issueBookSuccess.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>
		issueBook</display-name>
		<from-view-id>
		/issueBook.jsp</from-view-id>
		<navigation-case>
			<from-outcome>
			failure</from-outcome>
			<to-view-id>
			/issueBook.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<validator>
		<display-name>DateValidation</display-name>
		<validator-id>dateValidation</validator-id>
		<validator-class>infy.library.validator.DateValidation</validator-class>
	</validator>

</faces-config>
